<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="semen.sereda.yeticup">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="nosensor"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication.NoActionBar"
        android:windowSoftInputMode="adjustResize">

        <activity
            android:name="semen.sereda.yeticup.MainActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="semen.sereda.yeticup.SplashScreenActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="semen.sereda.yeticup.IntroActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="semen.sereda.yeticup.authorization.AuthorizationActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="semen.sereda.yeticup.authorization.ResetPasswordActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>